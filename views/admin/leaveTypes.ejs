<%- include('../partials/header') %>

<div class="container mt-5">
    <h2>Leave Types</h2>
    <a href="/admin/leave-types/new" class="btn btn-primary mb-3">Add New Leave Type</a>
    <% if (leaveTypes.length === 0) { %>
        <p>No leave types found.</p>
    <% } else { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Default Days</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% leaveTypes.forEach(leaveType => { %>
                    <tr>
                        <td><%= leaveType.id %></td>
                        <td><%= leaveType.name %></td>
                        <td><%= leaveType.defaultDays %></td>
                        <td>
                            <a href="/admin/leave-types/edit/<%= leaveType.id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/admin/leave-types/delete/<%= leaveType.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this leave type?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>

<%- include('../partials/footer') %>